                        <li class="nav-item dropdown ms-3">
                            <button class="btn btn-premium-outline btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-premium-lg border-0 mt-2">
