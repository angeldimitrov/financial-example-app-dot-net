                        </a>
                        <a href="#" class="text-decoration-none text-premium-muted hover-text-primary">
                            <small><i class="bi bi-headset me-1"></i>Support</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Premium Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Premium UI Enhancement Script -->
    <script>
        /**
         * Premium UI Enhancement Script
         * Adds sophisticated micro-interactions and loading states
         */
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced loading states
            function showGlobalProgress() {
                const progressBar = document.getElementById('global-progress');
                if (progressBar) {
                    progressBar.style.display = 'block';
                    const bar = progressBar.querySelector('.progress-bar');
                    bar.style.width = '30%';
                }
            }
            
            function hideGlobalProgress() {
                const progressBar = document.getElementById('global-progress');
                if (progressBar) {
                    const bar = progressBar.querySelector('.progress-bar');
                    bar.style.width = '100%';
                    setTimeout(() => {
                        progressBar.style.display = 'none';
                        bar.style.width = '0%';
                    }, 300);
                }
            }
            
            // Add loading states to navigation
            document.querySelectorAll('.nav-link-premium').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (this.href && this.href !== window.location.href) {
                        showGlobalProgress();
                        // Hide progress after page load or timeout
                        setTimeout(hideGlobalProgress, 2000);
                    }
                });
            });
            
            // Enhanced hover effects for interactive elements
            document.querySelectorAll('.card-premium, .btn-premium, .table-premium tbody tr').forEach(element => {
                element.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                element.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            
            // Add loading states to forms
            document.querySelectorAll('form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Wird verarbeitet...';
                        submitBtn.disabled = true;
                        showGlobalProgress();
                    }
                });
            });
            
            // Enhanced tooltip initialization for premium elements
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    delay: { show: 500, hide: 100 },
                    placement: 'top'
                });
            });
            
            // Add minimal animation delays to staggered elements - Professional appearance
            document.querySelectorAll('.animate-in').forEach((element, index) => {
                element.style.animationDelay = `${index * 10}ms`;
            });
            
            console.log('FinanzPro BWA Analytics - Premium UI Enhancements Loaded âœ¨');
        });
        
        // Global error handler for premium user experience
        window.addEventListener('error', function(e) {
            console.error('Application Error:', e.error);
            // Could integrate with error reporting service
        });
        
        // Performance monitoring
        window.addEventListener('load', function() {
            const loadTime = performance.timing.loadEventEnd - performance.timing.navigationStart;
            console.log(`Page loaded in ${loadTime}ms`);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Frontend Diagnostic Script (Development Only) -->
    @if (Context.Request.Host.Host == "localhost")
    {
        <script src="~/js/diagnostic.js"></script>
    }
    
    <!-- Custom CSS for layout enhancements -->
    <style>
        .premium-footer {
            background: linear-gradient(135deg, var(--color-neutral-100), var(--color-neutral-50));
            border-top: 1px solid var(--color-neutral-200);
            backdrop-filter: blur(10px);
        }
        
        .hover-text-primary:hover {
            color: var(--color-primary) !important;
            transition: color var(--timing-normal) var(--easing-ease-out);
        }
        
        .main-content {
            min-height: calc(100vh - 200px);
            background: linear-gradient(135deg, var(--color-neutral-50) 0%, rgba(248, 250, 252, 0.8) 100%);
            position: relative;
        }
        
        .main-content::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 25% 25%, rgba(26, 54, 93, 0.02) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(116, 66, 16, 0.02) 0%, transparent 50%);
            pointer-events: none;
        }
        
        .content-wrapper {
            position: relative;
            z-index: 1;
        }
        
        .brand-subtitle {
            font-size: 0.65rem;
            font-weight: 400;
            letter-spacing: 0.05em;
        }
        
        /* Mobile optimizations */
        @@media (max-width: 768px) {
            .navbar-brand-premium .brand-subtitle {
                display: none;
            }
            
            .footer-links {
                flex-direction: column;
                gap: 1rem !important;
            }
        }
    </style>
</body>
